<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:elevation="10dp"
        app:cardCornerRadius="35dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ImagenPizzaBase"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_estrella_vacia"/>
            <ImageView
                android:id="@+id/ImagenPizzaSeleccionada"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/seleccionado"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:orientation="vertical"
                android:background="@color/BlancoTransparente">
                <TextView
                    android:id="@+id/NombreBasePizza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/NombreNegocio"
                    android:textSize="18dp"
                    android:textColor="@color/colorNegro"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>