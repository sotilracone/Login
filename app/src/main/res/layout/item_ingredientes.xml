<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:elevation="20dp"
        app:cardCornerRadius="35dp">
        <ImageView
            android:id="@+id/ImagenIngrediente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_circulo"/>
        <ImageView
            android:id="@+id/ImagenIngredienteSel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/seleccionado"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="vertical"
            android:background="@color/BlancoTransparente">
            <TextView
                android:id="@+id/NombreIngrediente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/NombreNegocio"
                android:textSize="18dp"
                android:textColor="@color/colorNegro"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>